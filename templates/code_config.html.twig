<div class="ss-diagnostic-block">
   <h3>
      {{ 'settings.php status'|t }}
   </h3>
   <ul class="ss-config-diagnostic">
      {% if attributes.data.diagnostic %}
         {% for diagnostic in attributes.data.diagnostic %}
            <li>{{ diagnostic }}</li>
         {% endfor %}
      {% else %}
         <li><h4 class="ss-ok">OK</h4></li>
      {% endif %}
   </ul>
</div>
{% if attributes.data.diagnostic %}
   <div class="ss-config-block">
      <p>{{ 'Insert this configuration code (start-end block) at the end of your settings.php'|t }}:</p>
      <pre class="code-ss-inlcude">
      <span class="code-comments">// StackSight start config</span>
      <span class="code-red">define</span>(<span class="code-yellow">'STACKSIGHT_TOKEN'</span>, '<span class="pre-code-red">{{ attributes.data.token }}</span>');
      <span class="code-red">include_once</span>(<span class="code-blue">DRUPAL_ROOT</span> . <span class="pre-code-red">'/{{ attributes.data.module_path }}'</span> . <span class="code-yellow">'/stacksight-php-sdk/bootstrap-drupal-8.php'</span>);
      <span class="code-comments">// StackSight end config</span>
      </pre>
   </div>
{% endif %}